#!/bin/bash 
args=$@
# test first
curDir=`pwd`
testDir=$HOME
buildLog=/tmp/${USER}-log-x879873
SelfTestPath=`which runSelfTest`
SelfTestDir=${SelfTestPath%/*}
if [ "$SelfTestDir" == "" ]; then
    exit 1
fi
echo "test before commit ..."
cd $SelfTestDir &>/dev/null
./runSelfTest 
ret=$?

if [ "$ret" == "1" ]; then 
	exit 1
fi 
# if  test pass, then commit
cd - &>/dev/null
#svnCiCmd="svn ci "
#for arg in "$args" 
#do
#echo $arg 
#if [[ $arg  =~ " " ]]; then 
#svnCiCmd+="\"$arg\" "
#else
#svnCiCmd+="$arg "
#fi
#done
echo "svn ci $@"
svn ci "$@" 

# test after ci
echo "test after commit"
cd - &>/dev/null
./runSelfRegress
ret=$?
if [ "$ret" == "0" ]; then 
exit 0
fi 
exit 1
